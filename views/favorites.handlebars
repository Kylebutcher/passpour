      {{#each bottles as |bottle|}}
      <div class="col-3 text-white">
        <h2>{{whiskey_name}}</h2>
        <h3>{{whiskey_type}}</h3>
        <p>{{favoritebottle.order}}</p>
        <p>{{favoritebottle.taste_notes}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</main>




<section>
  <div class="container_1">
