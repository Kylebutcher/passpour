<header>
  <img src="/assets/img/passpourlogoSkinny.png" id="logo" alt="PassPour logo">
  <nav>
    <a class='nav-button' href="/assets/html/bucketList.html">Bucket List</a>
    <a class='nav-button' href="/">Explore</a>
    <a class='nav-button' href="/profile">Profile</a>

    {{#if logged_in}}
      <button id="logout">
        <a class="nav-button">Logout</a>
      </button>
    {{/if}}
  </nav>
</header>


<main class="showcase-main">
  <div>
    <h1 class="showcase-h1">The Showcase</h1>
  </div>

  <div class="container text-center">
    <div class="row align-items-start clearfix cubbies">
      {{#each bottles as |bottle|}}
      <div class="col-3 text-white drink-card">
        <h2>{{whiskey_name}}</h2>
        <h3>{{whiskey_type}}</h3>
        <p>{{favoritebottle.order}}</p>
        <p>{{favoritebottle.taste_notes}}</p>
      </div>
      {{/each}}s
    </div>
  </div>
</main>


<script src='/assets/js/showcase.js'></script>

